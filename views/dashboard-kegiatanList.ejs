<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style-total-participants.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/style/style-dashboard.css">
    <title>Automated Paid Promote Validation</title>
</head>
<body>
    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bxl-c-plus-plus'></i>
            <span class="logo_name">Dashboard</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="/dashboard">
                    <i class='bx bx-box' ></i>
                    <span class="links_name">Semua Kegiatan</span>
                </a>
            </li>
            <li>
                <a href="/dashboard/finishedEvent">
                    <i class='bx bx-list-ul' ></i>
                    <span class="links_name">Kegiatan Selesai</span>
                </a>
            </li>
            <li>
                <a href="/dashboard/unfinishedEvent">
                    <i class='bx bx-pie-chart-alt-2' ></i>
                    <span class="links_name">Kegiatan Belum Selesai</span>
                </a>
            </li>
            <li>
                <a href="/dashboard/alreadyFilled">
                    <i class='bx bx-coin-stack' ></i>
                    <span class="links_name">Semua Peserta</span>
                </a>
            </li>
            <li class="log_out">
                <a href="#">
                    <i class='bx bx-log-out'><img src="" alt=""></i>
                    <span class="links_name">Log out</span>
                </a>
            </li>
        </ul>
    </div>
    <section class="home-section">
        <nav>
            <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard"></span>
            </div>
            <div class="search-box">
                <input type="text" placeholder="Search...">
                <i class='bx bx-search' ></i>
            </div>
            <div class="profile-details">
                <span class="admin_name">Admin</span>
                <i class='bx bx-chevron-down' ></i>
            </div>
        </nav>
        <section class="home-section">
          <nav>
              <div class="sidebar-button">
                  <i class='bx bx-menu sidebarBtn'></i>
                  <span class="dashboard"><%= pageTitle %></span>
              </div>
              <div class="search-box">
                  <input type="text" placeholder="Search...">
                  <i class='bx bx-search' ></i>
              </div>
              <div class="profile-details">
                  <span class="admin_name">Admin</span>
                  <i class='bx bx-chevron-down' ></i>
              </div>
          </nav>
          <div class="home-content">
              <div class="filled-participants-box">
                  <div class="filled-box">
                      <div class="participants-details">
                          <ul class="details">
                              <li class="topic">Nama Kegiatan</li>
                              <% eventNames.forEach((name) => { %>
                                <li><%= name %></li>
                              <% }) %>
                          </ul>
                          <ul class="details">
                              <li class="topic">Link Event</li>
                              <% eventLinks.forEach((link) => { %>
                                <li><a href="<%= link %>" target="_blank">Link</a></li>
                              <% }) %>
                          </ul>
                  </div>
              </div>
          </div>
      </section>
        </section>
</body>
</html>